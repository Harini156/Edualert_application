<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="@android:color/white"/>

    <!-- Border in purple -->
    <stroke
        android:width="1.5dp"
        android:color="#922381" />

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Some padding inside -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
