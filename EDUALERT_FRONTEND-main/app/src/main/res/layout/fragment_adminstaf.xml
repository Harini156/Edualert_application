<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Subtitle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/staffTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message to Staff"
                android:textSize="28sp"
                android:textColor="#922381"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/staffSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose staff to send your message"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Grid of Cards -->
        <GridLayout
            android:id="@+id/staffGridFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            >

            <!-- Department Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStaffDepartment"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                android:checkable="true"
                app:checkedIcon="@drawable/ic_check"
                app:strokeColor="#922381"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="8dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg">

                    <ImageView
                        android:src="@drawable/ic_domain_24"
                        app:tint="#922381"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:id="@+id/titleStaffDepartment"
                        android:text="Department"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/subStaffDepartment"
                        android:text="CSE, ECE, IT, ..."
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Staff Type Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStaffType"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                android:checkable="true"
                app:checkedIcon="@drawable/ic_check"
                app:strokeColor="#922381"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="8dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg">

                    <ImageView
                        android:src="@drawable/ic_people"
                        app:tint="#922381"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:id="@+id/titleStaffType"
                        android:text="Staff Type"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/subStaffType"
                        android:text="Teaching / Non-Teaching"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Designation Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDesignation"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                android:checkable="true"
                app:checkedIcon="@drawable/ic_check"
                app:strokeColor="#922381"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="8dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg">

                    <ImageView
                        android:src="@drawable/ic_work"
                        app:tint="#922381"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:id="@+id/titleDesignation"
                        android:text="Designation"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/subDesignation"
                        android:text="HOD, Professor, Asst. Professor, Scholar"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="72dp"/>
    </LinearLayout>

    <!-- Bottom Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStaffContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Continue"
        android:textAllCaps="false"
        app:cornerRadius="14dp"
        app:backgroundTint="#922381"
        android:layout_gravity="bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
