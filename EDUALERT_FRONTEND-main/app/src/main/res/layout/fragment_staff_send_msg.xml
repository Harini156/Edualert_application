<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Logo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvFormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:textSize="28sp"
                android:textColor="#922381"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo"
                android:contentDescription="App Logo"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <!-- Recipient -->
        <TextView
            android:id="@+id/tvRecipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: Staff / Students"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="16dp"/>

        <!-- Department (non-editable) -->
        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:enabled="false"
            android:focusable="false"
            android:clickable="false"
            android:text="DEPARTMENT" />

        <!-- Year Selection (for Students) -->
        <LinearLayout
            android:id="@+id/layoutYearSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Year"
                android:textSize="16sp"
                android:textColor="#555"
                android:layout_marginBottom="8dp"/>

            <!-- Vertical orientation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbYear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Year" />

                <CheckBox
                    android:id="@+id/cbYear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="II Year" />

                <CheckBox
                    android:id="@+id/cbYear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="III Year" />

                <CheckBox
                    android:id="@+id/cbYear4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IV Year" />
            </LinearLayout>
        </LinearLayout>

        <!-- Designation Selection (for Staff) -->
        <LinearLayout
            android:id="@+id/layoutDesignationSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Designation"
                android:textSize="16sp"
                android:textColor="#555"
                android:layout_marginBottom="8dp"/>

            <!-- Vertical orientation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professor" />

                <CheckBox
                    android:id="@+id/cbAsstProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistant Professor" />

                <CheckBox
                    android:id="@+id/cbResearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Research Scholar" />
            </LinearLayout>
        </LinearLayout>

        <!-- Message Title -->
        <EditText
            android:id="@+id/etMessageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message Title"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <!-- Message Content -->
        <EditText
            android:id="@+id/etMessageContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Message Content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Attachment picker -->
        <LinearLayout
            android:id="@+id/layoutAddAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/attach"
                android:tint="#922381"/>

            <TextView
                android:id="@+id/tvAddAttachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Add Attachment"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- File container -->
        <LinearLayout
            android:id="@+id/layoutFileContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#555"/>

            <ImageView
                android:id="@+id/ivRemoveFile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_delete"
                android:contentDescription="Remove file"/>
        </LinearLayout>

        <!-- Send Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendMessage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Send Message"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:backgroundTint="#922381"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>
