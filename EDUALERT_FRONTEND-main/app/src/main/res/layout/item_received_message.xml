<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="#D1C4E9"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E2E2E"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message content goes here..."
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/attachmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Ž View Attachment"
                android:textSize="13sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sent at: 14 Oct 2025, 03:22 PM"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/senderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From: Admin"
                android:textSize="12sp"
                android:textColor="#7B1FA2"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Action Buttons Area -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <!-- Enhanced Tick Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tickButtonCard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#E91E63">

                <ImageView
                    android:id="@+id/tickButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_save"
                    android:tint="#FFFFFF"
                    android:contentDescription="Mark as read" />

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Delete Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/deleteButtonCard"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="#9E9E9E">

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="#FFFFFF"
                    android:contentDescription="Delete message" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>