<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        android:clipToOutline="true">

        <!-- Top Row: Title + Tick Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Message Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000" />

            <!-- Tick Button -->
            <ImageView
                android:id="@+id/tickButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check"
                android:background="@drawable/notification_badge_bg"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="Mark as read"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Message Content -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message content goes here..."
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="4dp" />

        <!-- Attachment -->
        <TextView
            android:id="@+id/tvAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Ž Attachment"
            android:textColor="#1E88E5"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Sent at below attachment -->
        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent at: 10 Sep 2025, 05:04 PM"
            android:textSize="12sp"
            android:textColor="#888"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
