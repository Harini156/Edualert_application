<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_backarrow" />

    <!-- Logo at Top Right -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="EduAlert Logo"
        android:src="@drawable/logo" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@id/backButton"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/adminProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Admin Profile"
                android:textColor="#922381"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Profile Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_bg"
                android:elevation="4dp">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/adminProfilePic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_bg"
                    android:padding="20dp"
                    android:layout_marginBottom="25dp" />

                <!-- Admin ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin ID"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/tvAdminId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ADM12345"
                    android:enabled="false"
                    android:drawableStart="@drawable/ic_id"
                    android:drawablePadding="10dp"
                    android:background="@drawable/input_bg"
                    android:paddingStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="admin@edualert.com"
                    android:enabled="false"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:background="@drawable/input_bg"
                    android:paddingStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp" />

                <!-- Role -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"

                    android:drawableStart="@drawable/ic_role"
                    android:drawablePadding="10dp"
                    android:background="@drawable/input_bg"
                    android:paddingStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Administrator" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
