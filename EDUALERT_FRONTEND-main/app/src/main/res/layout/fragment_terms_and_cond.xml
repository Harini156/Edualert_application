<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_backarrow" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="EduAlert Logo"
        android:src="@drawable/logo" />

    <!-- Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#922381"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp" />

            <!-- Intro -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to EduAlert – the official communication platform for your institution. By using this app, you agree to the following terms:"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- Usage Policy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usage Policy"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• The app must be used only for academic and official communication.\n\n• Any misuse or inappropriate content will result in restricted access."
                android:padding="10dp"
                android:background="@drawable/input_bg"
                android:textSize="14sp"
                android:layout_marginBottom="15dp" />

            <!-- User Responsibility -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Responsibility"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Keep your login credentials confidential.\n\n• You are responsible for the content you send."
                android:padding="10dp"
                android:background="@drawable/input_bg"
                android:textSize="14sp"
                android:layout_marginBottom="15dp" />

            <!-- Data Security -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Security"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Your data is securely stored and not shared with third parties.\n\n• We follow standard data protection guidelines."
                android:padding="10dp"
                android:background="@drawable/input_bg"
                android:textSize="14sp"
                android:layout_marginBottom="15dp" />

            <!-- Contact -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:text="edualert.notifications@gmail.com"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
