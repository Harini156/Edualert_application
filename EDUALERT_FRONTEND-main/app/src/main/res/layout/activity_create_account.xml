<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo at Top Right -->

        <!-- Title -->

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="117dp"
            android:layout_height="110dp"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:contentDescription="EduAlert Logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/createAccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:text="Create Account"
            android:textColor="#922381"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/createAccountSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join our academic community"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginBottom="25dp" />

        <!-- Role Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/roleTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:tabBackground="@drawable/tab_background"
            app:tabRippleColor="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="@color/tab_text_selector" />

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/fullNameField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your full name"
            android:drawableStart="@drawable/profile"
            android:drawablePadding="10dp"
            android:background="@drawable/input_bg"
            android:paddingStart="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="15dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email or ID"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your email or ID"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:background="@drawable/input_bg"
            android:paddingStart="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="15dp" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <!-- Password Field with Eye Icon -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_bg">

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/passw"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"
                android:textSize="15sp"
                android:textColorHint="#A29C9C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/togglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye"
                android:contentDescription="Toggle Password Visibility"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <!-- Confirm Password Field with Eye Icon -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_bg">

            <EditText
                android:id="@+id/confirmPasswordField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/passw"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"
                android:textSize="15sp"
                android:textColorHint="#A29C9C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/toggleConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye"
                android:contentDescription="Toggle Confirm Password Visibility"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Extra Fields (Visible Only for Student) -->
        <LinearLayout
            android:id="@+id/studentExtraFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <EditText
                android:id="@+id/departmentFieldStudent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your department"
                android:drawablePadding="10dp"
                android:background="@drawable/input_bg"
                android:paddingStart="15dp"
                android:textSize="15sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <EditText
                android:id="@+id/yearField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your year"
                android:drawablePadding="10dp"
                android:background="@drawable/input_bg"
                android:paddingStart="15dp"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <!-- Extra Fields (Visible Only for Staff) -->
        <LinearLayout
            android:id="@+id/staffExtraFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <EditText
                android:id="@+id/departmentFieldStaff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your department"
                android:drawablePadding="10dp"
                android:background="@drawable/input_bg"
                android:paddingStart="15dp"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
