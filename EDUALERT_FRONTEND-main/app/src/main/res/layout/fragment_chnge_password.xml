<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_backarrow" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="EduAlert Logo"
        android:src="@drawable/logo" />

    <!-- Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/changePassTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#922381"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/changePassSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update your account password"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="25dp" />

            <!-- Old Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Password"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg">

                <EditText
                    android:id="@+id/oldPasswordField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Enter old password"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/passw"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="15sp"
                    android:textColorHint="#A29C9C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/toggleOldPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/eye"
                    android:contentDescription="Toggle Old Password Visibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg">

                <EditText
                    android:id="@+id/newPasswordField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Enter new password"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/passw"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="15sp"
                    android:textColorHint="#A29C9C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/toggleNewPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/eye"
                    android:contentDescription="Toggle New Password Visibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm New Password"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="5dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_bg">

                <EditText
                    android:id="@+id/confirmNewPasswordField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Re-enter new password"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/passw"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="15sp"
                    android:textColorHint="#A29C9C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/toggleConfirmNewPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/eye"
                    android:contentDescription="Toggle Confirm New Password Visibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_bg"
                android:text="Update Password"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
